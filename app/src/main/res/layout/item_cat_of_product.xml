<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContainer"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cat 1 dffdsfds"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            android:fontFamily="@font/jana_font"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="-6sp"
            android:textColor="@color/black_level_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


        <View
            android:id="@+id/line_selected_indicator"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:background="@color/pink"
            android:visibility="gone"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/tvCategoryName"
            app:layout_constraintTop_toBottomOf="@+id/tvCategoryName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvCategoryName"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>