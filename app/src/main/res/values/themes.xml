<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ibrand" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/greylevel2</item>
        <item name="colorPrimaryVariant">@color/color_white_level_1</item>
        <item name="colorOnPrimary">@color/color_white_level_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/color_white_level_1</item>
        <item name="android:windowBackground">@color/color_white_level_1</item>
        <item name="editTextStyle">@style/EditTextStyle</item>

        <item name="bottomSheetDialogTheme">@style/TopRoundedBottomSheetDialog</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="dialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/sp_medium</item>
    </style>


    <style name="custom_style_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="expandedHintEnabled">true</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:labelTextSize">14sp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/darkgrey</item>
        <item name="android:textColorHint">@color/greylevel2</item>
        <item name="colorControlActivated">@color/greylevel2</item>
        <item name="android:textColor">@color/darkgrey</item>
    </style>

    <style name="DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Small.Inverse</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:labelTextSize">14sp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/greylevel2</item>
        <item name="colorControlActivated">@color/greylevel2</item>
        <item name="android:textColor">@color/darkgrey</item>
    </style>


    <style name="Style_TextView_bottom_nav">
        <item name="fontFamily">@font/jana_font</item>
        <item name="android:textSize">@dimen/sp_small</item>
    </style>

    <style name="TopRoundedBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TopRoundedBottomSheet</item>
    </style>

    <style name="TopRoundedBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/topRoundedBottomSheet</item>
    </style>

    <!--    <style name="CustomCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">-->
    <!--        <item name="android:button">@drawable/checkbox_selector</item>-->
    <!--        <item name="android:background">@android:color/transparent</item>-->
    <!--    </style>-->

    <style name="dobpicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/blue_level1</item>
        <item name="colorPrimaryDark">@color/blue_level1</item>
        <item name="colorAccent">@color/blue_level1</item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/DatePickerTheme.ButtonBarNegativeButtonStyle
        </item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/DatePickerTheme.ButtonBarNegativeButtonStyle
        </item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue_level1</item>
    </style>

    <style name="DatePickerTheme.BlackButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>


    <style name="roundedImageView2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="roundedImageView3" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>


    <style name="roundedImageView4" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


    <style name="topRoundedBottomSheet">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_bottom_sheet_dialog</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_bottom_sheet_dialog</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.ibrand" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>




    <style name="NoBottomNavigationShadow" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_item_background</item>
    </style>


</resources>